<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto mt-4">
      <div class="card shadow">
        <div class="class-header bg-primary">
          <h3 class="text-light">Add Student Result</h3>
        </div>
        <div class="card-body p-4">
          <form action="/api/teacher/addResult" method="POST">
            <div class="row">
              <div class="form-group col-md-6">
                <label for="studentName">Student Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="studentName"
                  id="studentName"
                  placeholder="Student Name"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="rollNo">Roll Number</label>
                <input
                  type="text"
                  class="form-control"
                  name="rollNo"
                  id="rollNo"
                  placeholder="Roll Number"
                />
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-2">
                <label for="score">Marks</label>
                <input
                  type="text"
                  class="form-control"
                  name="score"
                  id="score"
                  placeholder="Score"
                />
              </div>
              <div class="form-group col-md-2">
                <label for="score">Max. Marks</label>
                <input
                  type="text"
                  class="form-control"
                  name="maxMarks"
                  id="maxMarks"
                  placeholder="Max Marks"
                />
              </div>
              <div class="form-group col-md-3">
                <label for="dob">Date of birth</label>
                <input type="date" class="form-control" id="dob" name="dob" />
              </div>
            </div>
            <div class="row" style="padding-top: 50px">
              <button type="submit" class="btn btn-primary rounded-pill">
                Add Result
              </button>
            </div>
          </form>
          <a href="/api/teacher/dashboard">Back</a>
          <a href="/api/teacher/logout" style="float: right">Logout</a>
        </div>
      </div>
    </div>
  </div>
</div>

