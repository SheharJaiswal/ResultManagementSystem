<section class="vh-100" style="background-color: #508bfc">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <!-- <div class="col-12 col-md-8 col-lg-6 col-xl-5"> -->
      <div>
        <div class="card shadow-2-strong" style="border-radius: 1rem">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5">Teacher Login</h3>
            <%if(locals.unauthorizedTeacher){%>
            <div class="alter alert-danger text-center" setTimeout(1)>
              <%=unauthorizedTeacher%>
            </div>
            <%}%>
            <form action="/api/teacher/login"method="POST">
            <div class="form-group form-outline mb-4">
              <input
                placeholder="Username"
                type="email"
                name="username"
                class="form-control form-control-lg"
              />
            </div>

            <div class="form-group form-outline mb-4">
              <input
                placeholder="Password"
                type="password"
                name="password"
                id="password"
                class="form-control form-control-lg"
              />
            </div>

            <!-- Checkbox -->
            <div class="form-group form-check d-flex justify-content-start mb-4">
              <input
                class="form-check-input"
                type="checkbox"
                onclick="myFunction()"
              />
              <label class="form-check-label col-md-2">
                Show Password
              </label>
            </div>
            <div class="row">            
              <button class="btn btn-primary btn-lg btn-block rounded-pill" type="submit">
              Login
            </button>
          </div>

            <br>
            <p style="text-align: left;" >Don't have account click <a href="/api/teacher/register" target="_blank">here</a> to Register</p>
          </form>
            <hr class="my-4" />
            <div style="text-align: left;"><a href="/"><h5><<- Back</h3></a></div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  function myFunction() {
    var x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>
