<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto mt-4">
      <div class="card shadow">
        <div class="class-header bg-success">
          <h3 class="text-light">Edit Student Result</h3>
        </div>
        <div class="card-body p-4">
          <section class="card-body container">
            <form
              action="/api/teacher/dashboard/edit/<%-result.id%>"
              method="post"
            >
              <div class="row">
                <div class="form-group col-md-6">
                  <label for="studentName">Student Name</label>
                  <input
                    type="text"
                    class="form-control"
                    name="studentName"
                    id="studentName"
                    value="<%-result.studentName%>"
                    placeholder="Student Name"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="rollNo">Roll Number</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%-result.rollNo%>"
                    name="rollNo"
                    id="rollNo"
                    placeholder="Roll Number"
                  />
                </div>
              </div>
              <div class="row">
                <div class="form-group col-md-2">
                  <label for="score">Score</label>
                  <input
                    type="text"
                    value="<%-result.score%>"
                    class="form-control"
                    name="score"
                    id="score"
                    placeholder="Score"
                  />
                </div>
                <div class="form-group col-md-3">
                  <label for="dob">Date of birth</label>
                  <input
                    type="date"
                    class="form-control"
                    id="dob"
                    value="<%-result.dob%>"
                    name="dob"
                  />
                </div>
              </div>
              <div class="row" style="padding-top: 50px">
                <button class="btn btn-success" type="submit">
                  Update Result
                </button>
              </div>
            </form>
            <a href="/api/teacher/dashboard">Back</a>
            <a href="/api/teacher/logout" style="float: right">Logout</a>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
